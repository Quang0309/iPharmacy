<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quang.ipharmacy.MedicineInfo"
    android:background="@drawable/fade_background"
    android:id="@+id/relativeLayout">
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:elevation="12dp"
        android:id="@+id/cardView"
        android:innerRadius="0dp"
        app:cardCornerRadius="40dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"

            android:src="@drawable/defaultimg" />
    </android.support.v7.widget.CardView>


    <EditText

        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="#FFFAFA"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/round_text"
        android:id="@+id/txtInfoName"
        android:layout_below="@id/cardView"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>
    <ImageButton
        android:id="@+id/imgbtnName"
        android:src="@drawable/ic_action_m"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/node"
        android:layout_below="@id/cardView"
        android:layout_alignParentStart="true"/>
    <EditText
        android:textSize="20sp"
        android:textColor="#FFFAFA"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/round_text"
        android:layout_below="@id/txtInfoName"
        android:inputType="numberDecimal"
        android:id="@+id/txtQuantity"/>
    <ImageButton
        android:id="@+id/imgbtnQuantity"
        android:src="@drawable/ic_action_q"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/node"
        android:layout_below="@id/txtInfoName"
        android:layout_alignParentStart="true"/>
    <EditText
        android:textSize="20sp"
        android:textColor="#FFFAFA"
        android:layout_below="@id/txtQuantity"
        android:layout_width="350dp"
        android:inputType="date"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round_text"
        android:id="@+id/txtInfoLastModify"/>
    <ImageButton
        android:id="@+id/imgbtnDate"
        android:src="@drawable/ic_action_"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/node"
        android:layout_below="@id/txtQuantity"
        android:layout_alignParentStart="true"/>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/txtInfoLastModify"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/save_button"
        />
</RelativeLayout>
